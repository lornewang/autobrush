{
    "manifest_version": 2,
    "name": "AutoBrush",
    "version": "1.0.3",
    "icons": {
      "96": "icon.png"
    },
    "content_scripts": [{ 
        "js": ["js/main.js"], 
        "matches": ["<all_urls>"], 
        "run_at": "document_end",
        "all_frames": true
   }],
   "browser_action": {
       "default_icon": "icon.png",
       "default_popup": "popup.html"
   },
   "web_accessible_resources": [
       "js/jquery.js",
       "js/jquery.xpath.js",
       "js/inject.js",
       "css/inject.css"
   ],
   "options_page": "options.html",
   "permissions": [
      "storage"
    ]
}